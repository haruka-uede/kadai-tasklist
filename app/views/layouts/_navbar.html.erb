                        <ul class="dropdown-menu">
                            <li class="dropdown-item"><%= link_to 'My Tasks', tasks_path %></li>
                            <li class="dropdown-divider"></li>
                            <li class="dropdown-item"><%= link_to 'Logout', logout_path, method: :delete %></li>
                        </ul>
                    </li>
                <% else %>
                    <a class="nav-item"><%= link_to 'Signup', signup_path, class: 'nav-link' %></a>
                    <a class="nav-item"><%= link_to 'Login', login_path, class: 'nav-link' %></a>
